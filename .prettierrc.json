{
  "printWidth": 120,
  "singleAttributePerLine": true,
  "singleQuote": true,
  "trailingComma": "all",
  "vueIndentScriptAndStyle": true,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "singleAttributePerLine": false
      }
    },
    {
      "files": ["*.json5"],
      "options": {
        "singleQuote": false,
        "quoteProps": "preserve"
      }
    },
    {
      "files": ["*.yml"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
